<%= render 'shared/menu' %>

<h1>All Products</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Status</th>
    <th>Supported Features</th>
    <th colspan="1"></th>
  </tr>

  <% @products.each do |product| %>
    <tr>
      <td><%= product.title %></td>
      <td><%= product.status %></td>
      <td><%= product.supportedFeatures %></td>
      <td><%= link_to 'Show More', product_path(product) %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'New Product', new_product_path %>