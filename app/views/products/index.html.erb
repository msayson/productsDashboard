<div class='page_panel'>
  <%= render 'products/productPagesMenu' %>
  <div class='main_content'>
    <h1>All Products</h1>

    <p>
      Total number of products: <%= @products.size %>
    </p>

    <ul>
      <% @statuscounts.each do |count| %>
        <li><%= count[0] %>: <%= count[1] %></li>
      <% end %>
    </ul>

    <%= render 'products/filterrific_search_form' %>
    <%= render(partial: 'products/list', locals: { products: @products }) %>
  </div>
</div>
