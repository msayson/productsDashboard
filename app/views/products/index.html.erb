<h1>All Products</h1>

<p>
  Total number of products: <%= @productsbytitle.size %>
</p>

<ul>
  <% @statuscounts.each do |count| %>
    <li><%= count[0] %>: <%= count[1] %></li>
  <% end %>
</ul>

<table>
  <tr>
    <th><%= sortable_column 'title' %></th>
    <th><%= sortable_column 'status' %></th>
  </tr>

  <% @productsbytitle.each do |product| %>
    <tr>
      <td><%= link_to product.title, product_path(product) %></td>
      <td><%= product.status %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'New Product', new_product_path %>